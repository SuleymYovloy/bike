.footer
	text-align center
	padding 1.9375em 0 2.25em

	&__content
		display flex
		justify-content center
		flex-direction column
		align-items center

		+sm-block()
			display flex
			flex-direction: row
			align-items center

	&__mail
		text-decoration none
		display flex
		margin-bottom 1.375em

		+sm-block()
			margin-bottom 0

	&__mail-text
		font-size 1rem
		font-family 'Open Sans', sans-serif
		font-weight normal
		line-height 1.5
		color: #808080
		margin-left 0.9375em

	&__phone
		text-decoration none
		display flex
		+sm-block()
			margin-left 5.625em

	&__phone-text
		font-size 1rem
		font-family 'Open Sans', sans-serif
		font-weight normal
		line-height 1.5
		color: #808080
		margin-left 0.93em